#include <iostream>
using namespace std;

void BubbleSort(int arr[],int n)
{
    int temp,flag=0;
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-1;j++)
        {
            if(arr[j] > arr[j+1])
            {
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
                flag=1;
            }
        }
        if(flag==0)
        {
            cout << "Elements are already sorted" <<endl;  //Prints the message if array is already sorted
            break;
        }
    }
    cout << "After Sorting,Elements are: "<< endl;
    for(int i=0;i<n;i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main()
{
    int arr[8]={2,50,8,10,15,40,3,25};
    BubbleSort(arr,8); // passing array and its size to Bubble Sort function
    return 0;
}
